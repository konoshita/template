
<%= search_form_for @q, url: reservations_path do |f| %>
  <div class="input-group input-group-sm">
  <%= f.search_field :name_cont, class: 'form-control form-control-navbar"',placeholder: '検索ワード' %>
        <div class="input-group-append">
            <%= f.submit '検索', class: 'btn btn-navbar',id:"btn-search" %>
        </div>
      </div>
<% end %>
<% @search_reservations.each do |reservation| %>
  <p><%= reservation.day %></p>
  <p><%= reservation.name %></p>
<% end %>